@using NonFactors.Mvc.Grid;
@{
    ViewBag.Title = "White Level Bank Details";
    Layout = "~/Areas/PowerAdmin/Views/Shared/_PowerAdminLayout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal padding-top-20">
        <div class="row">
            <div class="col-md-12">
                <div class="panel">
                    <div class="panel-heading">
                        <div class="panel-title" align="right"><a href="@Url.Action("BankDetails", "PowerAdminBankDetails", new { area = "PowerAdmin" })" class="btn btn-info btn-xs text-color-white"><span class="ion-plus"></span>Add New Bank</a></div>
                    </div><!--.panel-heading-->
                    <div class="panel-body">
                        <div class="row example-row">
                            @Html.AjaxGrid(Url.Action("IndexGrid", "PowerAdminBankDetails", new { area = "PowerAdmin" }))
                        </div><!--.row-->
                    </div><!--.panel-body-->
                    <div class="panel-footer text-right">
                        <a href="@(Url.Action("ExportIndex", "PowerAdminBankDetails", new { area = "PowerAdmin" }) + ViewContext.HttpContext.Request.QueryString)" class="btn btn-info btn-xs"><span class="ion-forward"></span>Export</a>
                    </div>
                </div><!--.panel-->
            </div><!--.col-md-12-->
        </div><!--.row-->
    </div>
    @Scripts.Render("~/bundles/PowerAdminBank");
}